{
  "$schema": "./node_modules/firebase-tools/schema/firebase-config.json",
  "functions": [
    {
      "source": ".",
      "codebase": "default",
      "ignore": [
        "src",
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm run lint",
        "npm run build"
      ]
    }
  ],
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "config/firestore.rules",
    "indexes": "config/firestore.indexes.json"
  },
  "emulators": {
    "hosting": {
      "port": 7100
    },
    "functions": {
      "port": 7101
    },
    "firestore": {
      "port": 7102
    },
    "pubsub": {
      "port": 7103
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
