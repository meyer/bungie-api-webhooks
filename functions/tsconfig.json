{
  "compilerOptions": {
    "module": "NodeNext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "lib": [
      "ESNext",
      // not great but node-fetch uses globals that are now DOM-only
      "DOM"
    ],
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "noUncheckedIndexedAccess": true,
    "allowSyntheticDefaultImports": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
